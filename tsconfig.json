{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "paths": {
      "components/*": [
        "components/*"
      ],
      "hooks/*":["hooks/*"],
      "config/*":["config/*"],
      "utils/*":["utils/*"],
      "contexts/*":["contexts/*"],
      "state/*":["state/*"],
      "views/*":["views/*"]
    }
  },
  "include": [
    "./src/**/*",
    "scripts"
  ]
}